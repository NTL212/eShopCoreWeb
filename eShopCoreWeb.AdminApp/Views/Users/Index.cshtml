
@using eShopCoreWeb.ViewModels.Common;
@model PagedResult<eShopCoreWeb.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
<h1>Danh sách người dùng</h1>
<!-- DataTales Example -->
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
    <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol> 
    <!-- DataTales Example -->
    <div class="card shadow mb-4"><div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><a class="btn btn-success" asp-controller="Users" asp-action="Create">Tạo mới người dùng </a></h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên</th>
                            <th>Họ</th>
                            <th>SĐT</th>
                            <th>Tài khoản</th>
                            <th>Email</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.ActionLink("Chỉnh sửa", "Update","Users", new { id=item.Id }) |
                                    @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<!-- End of Main Content -->

